FROM openjdk:17-oracle
ENV PASSPORT_KEY: ${PASSPORT_KEY}
ENV PASSPORT_ALGORITHM: ${PASSPORT_ALGORITHM}
ENV TIMELINE_REDIS_HOST: ${TIMELINE_REDIS_HOST}
ENV TIMELINE_REDIS_PORT: ${TIMELINE_REDIS_PORT}
ENV TIMELINE_REDIS_PASSWORD: ${TIMELINE_REDIS_PASSWORD}
ENV KAFKA_SERVERS: ${KAFKA_SERVERS}
ARG JAR_FILE=build/libs/easel-timeline-service-0.0.1-SNAPSHOT.jar
ADD ${JAR_FILE} easel-timeline-service.jar
ENTRYPOINT ["java", "-jar", "/easel-timeline-service.jar"]
